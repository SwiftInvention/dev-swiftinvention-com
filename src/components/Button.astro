---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
  classes?: string;
  type?: 'button' | 'submit';
  variant?: 'white' | 'orange';
}

const { classes, type, variant = 'white', ...buttonProps } = Astro.props;
---

<button
  class:list={[
    'flex items-center justify-center rounded-md px-2.5 py-2.5 text-sm font-semibold',
    variant === 'orange' &&
      'border border-warning-500 bg-warning text-white hover:bg-warning/90 hover:text-white',
    variant === 'white' &&
      'border-none bg-primaryCol2 text-gray-solid hover:text-primaryCol1',
    classes,
  ]}
  type={type ?? 'button'}
  {...buttonProps}
>
  <slot />
</button>

<style></style>
