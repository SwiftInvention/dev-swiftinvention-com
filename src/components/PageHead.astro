---
import Button from '~/components/Button.astro';

interface Props {
  pageTitle: string;
  title: string;
  subtitle: string;
  image?: ImageMetadata;
}
const { pageTitle, title, subtitle, image } = Astro.props;
---

<div class="relative mt-8 justify-between px-4 pb-4 md:mt-24 md:px-20 flex flex-col md:flex-row items-start">
  <div
    id="page-head-block__text"
    class="relative z-10 mb-4 opacity-0 md:mb-0 md:w-[60%]"
  >
    <div class="">
      <div class="transparent-text inline-block text-7xl md:text-9xl-desktop">
        {pageTitle}
      </div>
    </div>
    <div class="mb-4 text-4xl text-white md:mt-1.5 md:text-7xl-desktop" set:html={title}>
    </div>
    <div class="text-xl text-white opacity-80 md:text-xl-desktop">
      {subtitle}
    </div>
  </div>
  <Button classes="w-full md:hidden py-3 text-xl md:text-xl-desktop"
  >Work with us</Button
>
  {image && <img class="hidden lg:block w-[30%]" width={image.width} height={image.height} src={image.src} />}
</div>
<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  gsap.to('#page-head-block__text', {
    scrollTrigger: '#page-head-block__text',
    opacity: 1,
    translateY: 0,
    duration: 1,
    delay: 0.25,
    startAt: {
      translateY: -60,
    },
  });
</script>
