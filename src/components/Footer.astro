---
import birdsUpImage from '~/assets/images/new/birds-up.png';
import SwiftInventionIcon from '~/assets/images/swift-white-logo.svg';

import { NavRoutes } from '~/constants/routes.astro';
import Button from './Button.astro';
import Input from './Input.astro';
import SocialNetworks from './SocialNetworks.astro';
---

<footer class="mx-4 py-8 md:mx-20 md:pt-16">
  <div
    class="max-md:contact-us-form md:contact-us-form-desktop flex flex-col gap-6 px-6 py-6 md:mb-16 md:flex-row md:py-16 md:pl-0 md:pr-16"
  >
    <div
      class="flex flex-col items-center md:basis-[47.5%] md:flex-col-reverse md:items-start md:justify-between md:px-0"
    >
      <img src={birdsUpImage.src} class="relative z-10 w-[70%] md:w-[90%]" />
      <div class="relative -mt-11 md:mt-0">
        <div class="mb-2 text-6xl text-white md:text-6xl-desktop">
          Let’s talk
        </div>
        <span class="text-lg text-white opacity-80 md:text-lg-desktop"
          >Feel free to shoot us a message about your project and will reach
          back to your shortly.</span
        >
      </div>
    </div>
    <form id="contact-us-form" class="flex flex-col gap-6 md:basis-[47.5%]">
      <Input name="name" required placeholder="Name" />
      <Input name="email" required placeholder="Email address" type="email" />
      <Input name="phone" placeholder="Phone number" type="tel" />
      <Input name="message" isTextarea required placeholder="Message" />
      <Button
        type="submit"
        variant="orange"
        classes="py-3 px-6 text-xl md:text-xl-desktop">Send message</Button
      >
    </form>
  </div>
  <div class="mt-16 flex flex-col">
    <div
      class="mb-6 md:mb-8 md:flex md:items-center md:justify-between md:border-b md:border-white/10 md:pb-8"
    >
      <SwiftInventionIcon class="h-4 w-[200px]" />
      <div class="hidden md:block">
        <SocialNetworks />
      </div>
    </div>
    <div class="mb-6 flex flex-wrap gap-x-8 gap-y-6 md:mb-8">
      <a
        class="text-sm font-medium text-gray-accentText"
        href={NavRoutes.services.path}>{NavRoutes.services.name}</a
      >
      <a
        class="text-sm font-medium text-gray-accentText"
        href={NavRoutes.aboutUs.path}>{NavRoutes.aboutUs.name}</a
      >
      <a
        class="text-sm font-medium text-gray-accentText"
        href={NavRoutes.caseStudies.path}>{NavRoutes.caseStudies.name}</a
      >
      <a
        class="text-sm font-medium text-gray-accentText"
        href={NavRoutes.careers.path}>{NavRoutes.careers.name}</a
      >
      <a
        class="text-sm font-medium text-gray-accentText"
        href={'#contact-us-form'}>Contact us</a
      >
    </div>
    <div class="mb-8 border-b border-white/10 pb-8 md:hidden">
      <SocialNetworks />
    </div>
    <div class="mb-1 text-sm text-white">© 2024 Swift Invention, Inc.</div>
    <div class="text-sm text-white opacity-60">
      All trademarks, logos, and brand names are the property of their
      respective owners.
    </div>
  </div>
</footer>

