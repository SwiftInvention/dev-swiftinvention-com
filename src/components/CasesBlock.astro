---
import privoLogoImage from '~/assets/images/new/logos/privo-white.png';
import vierallyLogoImage from '~/assets/images/new/logos/vierally-white.png';
import plumcheckLogoImage from '~/assets/images/new/logos/plumcheck-logo.png';
import eversanaLogoImage from '~/assets/images/new/logos/eversana-white.png';
import blankslateLogoImage from '~/assets/images/new/logos/blankslate-white.png';
import mbsLogoImage from '~/assets/images/new/logos/myblueskies-white.png';
import pakiraLogoImage from '~/assets/images/new/logos/pakira-logo.png';
import meeLogoImage from '~/assets/images/new/logos/mee-white.png';
import ArrowRight from '~/assets/images/new/arrow-right.svg';
import { NavRoutes } from '~/constants/routes.astro';
import { Image } from 'astro:assets';
---

<div class="container pb-6 md:pb-8">
  <div
    id="case-studies-logos"
    class="case-studies-logos mb-0.5 mt-0 flex flex-wrap justify-center gap-x-8 gap-y-6 px-4 pb-8 pt-16 md:mt-20 md:gap-x-20 md:gap-y-8 md:pt-20"
  >
    <Image
      format="webp"
      width={privoLogoImage.width}
      height={privoLogoImage.height}
      src={privoLogoImage}
      class="h-6 md:h-8"
      alt="Privo logo"
    />
    <Image
      format="webp"
      width={vierallyLogoImage.width}
      height={vierallyLogoImage.height}
      src={vierallyLogoImage}
      class="h-6 md:h-8"
      alt="Vierally logo"
    />
    <Image
      format="webp"
      width={plumcheckLogoImage.width}
      height={plumcheckLogoImage.height}
      src={plumcheckLogoImage}
      class="h-6 md:h-8"
      alt="plumcheck logo"
    />
    <Image
      format="webp"
      width={eversanaLogoImage.width}
      height={eversanaLogoImage.height}
      src={eversanaLogoImage}
      class="h-6 md:h-8"
      alt="eversana logo"
    />
    <Image
      format="webp"
      width={meeLogoImage.width}
      height={meeLogoImage.height}
      src={meeLogoImage}
      class="h-6 md:h-8"
      alt="mee logo"
    />
    <Image
      format="webp"
      width={mbsLogoImage.width}
      height={mbsLogoImage.height}
      src={mbsLogoImage}
      class="h-6 md:h-8"
      alt="mbs logo"
    />
    <Image
      format="webp"
      width={pakiraLogoImage.width}
      height={pakiraLogoImage.height}
      src={blankslateLogoImage}
      class="h-6 md:h-8"
      alt="blankslate logo"
    />
    <Image
      format="webp"
      width={pakiraLogoImage.width}
      height={pakiraLogoImage.height}
      src={pakiraLogoImage}
      class="h-6 md:h-8"
      alt="pakira logo"
    />
  </div>
  <div class="case-studies-link flex justify-center py-4 md:py-8">
    <a
      class="cursor-pointer p-3 text-xl text-white hover:opacity-80 md:text-xl-desktop"
      href={NavRoutes.caseStudies.path}
    >
      View all case studies <ArrowRight
        class="ml-2.5 inline-block h-5 w-5 md:h-7 md:w-7"
      /></a
    >
  </div>
</div>
<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  gsap.from('#case-studies-logos>img', {
    scrollTrigger: '#case-studies-logos',
    opacity: 0,
    delay: 0.5,
    duration: 1,
    stagger: 0.2,
    translateY: 20,
    ease: 'power2.out',
  });
</script>
